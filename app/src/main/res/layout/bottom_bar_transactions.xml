<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/bottomBarBackgroundColor"
    android:layout_alignParentBottom="true">

    <ImageButton
        android:id="@+id/transaction_select_category_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:foreground="@drawable/selectable_item_background"
        android:padding="8dp"
        android:src="@drawable/house"
        android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/transactions_note_edit_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:background="?attr/bottomBarEditBackgroundColor"
        android:gravity="center"
        android:hint="@string/hint_note"
        android:textSize="@dimen/text_size"
        android:textColorHint="?attr/customEditHintColor"
        android:textColor="?attr/customEditTextColor"
        android:textCursorDrawable="@null"
        android:inputType="text|textCapWords" />

    <EditText
        android:id="@+id/transactions_value_edit_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="?attr/bottomBarEditBackgroundColor"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:textColorHint="?attr/customEditHintColor"
        android:textColor="?attr/customEditTextColor"
        android:textCursorDrawable="@null"
        android:inputType="numberDecimal" />

    <ImageButton
        android:id="@+id/add_transaction_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/state_add_button_background"
        android:gravity="center" />

</LinearLayout>