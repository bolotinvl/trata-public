<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <DatePicker
        android:id="@+id/custom_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/DateTimePicker" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/custom_date_picker_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/custom_date_picker_ok_button"
            android:padding="8dp"
            android:text="@string/custom_date_picker_cancel_button"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/custom_date_picker_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/custom_date_picker_ok_button"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"/>

    </RelativeLayout>

</RelativeLayout>