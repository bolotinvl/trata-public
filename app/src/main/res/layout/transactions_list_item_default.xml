<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_transaction_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/listItemBackgroundColor"
    android:foreground="@drawable/selectable_item_background">

    <ImageView
        android:id="@+id/line_divider_transaction_default"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/lineDividerColor"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/category_icon_transaction_default"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            tools:src="@drawable/coffee" />

        <TextView
            android:id="@+id/category_name_transaction_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/category_icon_transaction_default"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textSize="@dimen/text_size"
            android:textColor="?attr/listItemTextColor"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Home"/>

        <TextView
            android:id="@+id/note_transaction_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/category_icon_transaction_default"
            android:layout_toStartOf="@id/value_transaction_default"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_size"
            android:textColor="?attr/listItemTextColor"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Expense Name"/>

        <TextView
            android:id="@+id/value_transaction_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textSize="@dimen/default_mode_sum_size"
            android:textColor="?attr/listItemTextColor"
            tools:text="500"/>

    </RelativeLayout>

</LinearLayout>